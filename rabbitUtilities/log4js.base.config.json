{
    "appenders": {
        "console": {
            "type": "console"
        },
        "access": {
            "type": "dateFile",
            "filename": "logs/access.log",
            "pattern": "-yyyy-MM-dd",
            "category": "http"
        },
        "file": {
            "type": "file",
            "filename": "logs/app.log",
            "maxLogSize": 10485760, 
            "backups": 3,
            "compress": true
        },
        "app": {
            "type": "file",
            "filename": "logs/app.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "logs/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        }
    },
    "categories": {
        "default": { "appenders": [ "console" ], "level": "info" },
        "files": { "appenders": [ "file", "app", "errors" ], "level": "info" },
        "http": { "appenders": [ "access"], "level": "DEBUG" }
    }
}